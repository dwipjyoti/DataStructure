public class LinearSearch{
  public static void main(String[] args){
      int[] arr=new int[]{10,20,60,70,5,4};
      int index=search(arr,5);
      System.out.println("value found at index :- "+index);
      
  }
  
  public static int search(int[] arr,int val){
      int index=-1;// will return -1 if value not found in array
      for(int i=0;i<arr.length;i++){
          if(arr[i]==val){
              index=i;
              break; //if we found the value say at 2nd index, then we dont need to see in further index.......So we break adn return index
          }
      
      }
      
      return index;
  
  }
}
